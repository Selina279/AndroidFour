<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ygd.imooc.Activity.SuggestActivity"
    tools:showIn="@layout/activity_suggest">

    <EditText
        android:id="@+id/etSuggest"
        android:singleLine="false"
        android:gravity="top"
        android:background="@drawable/et_box"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <Button
        android:id="@+id/btSuggest"
        android:layout_alignParentRight="true"
        android:text="提交"
        android:layout_below="@+id/etSuggest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
