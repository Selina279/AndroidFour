<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Activity_StudyHistory">
    <!--此xml用于对学习记录的显示-->
    <!--Arvin-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#438FCB"
        android:orientation="horizontal">                    <!-- 尖括号的布局 -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/topbar_up" />         <!-- 购物车的布局 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5.49"
            android:gravity="center"
            android:text="我的记录"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />         <!-- 编辑的布局 -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ListView
            android:id="@+id/studyHistory_listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="#808080"
            android:dividerHeight="0.5dp"></ListView>
    </LinearLayout>

</LinearLayout>