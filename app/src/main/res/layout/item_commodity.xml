<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<!--商品的样板 Arvin-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">         <!-- 小对勾的布局 -->
        <CheckBox
            android:id="@+id/pro_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />         <!-- 图片布局 -->
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img1" />         <!-- 商品名称和价格的布局 -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:orientation="vertical">             <!-- 商品名称的布局 -->
            <TextView
                android:id="@+id/classname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="连衣裙女夏季" />             <!-- 价格的布局 -->

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="20dp"
                android:text="￥88"
                android:layout_marginLeft="100dp"
                android:textSize="16sp" />            <!-- <TextView    android:id="@+id/pro_markPrice"                  android:layout_width="wrap_content"                  android:layout_height="wrap_content"                  android:layout_gravity="bottom"                  android:layout_marginTop="10dp"                  android:text="￥66"                  android:textSize="16sp"/> -->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

